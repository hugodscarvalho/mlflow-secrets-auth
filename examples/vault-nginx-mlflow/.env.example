# Demo Configuration
# Copy this file to .env and adjust values as needed

# Vault Configuration
VAULT_ROOT_TOKEN=demo-root-token-12345
VAULT_SECRET_PATH=secret/mlflow/auth

# Authentication Mode
# Options: "basic" (username:password) or "bearer" (API key)
AUTH_MODE=basic

# MLflow Credentials (for Basic Auth)
MLFLOW_USERNAME=mlflow-user
MLFLOW_PASSWORD=secure-password-123

# MLflow API Key (for Bearer Auth)
# Only used when AUTH_MODE=bearer
MLFLOW_API_KEY=mlflow-api-key-demo-567890abcdef

# MLflow Secrets Auth Plugin Activation
MLFLOW_TRACKING_AUTH=mlflow_secrets_auth
